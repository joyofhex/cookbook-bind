; Generated by Chef for <%= node['fqdn'] %>
; Local modifications will be overwritten.

$TTL <%= node['bind']['zones']['ttl'] %>
$ORIGIN <%= @zone %>.
@    IN     SOA  <%= node['bind']['zones']['nsmaster'] %>. <%= node['bind']['zones']['email'] %> (
                                1          ; serial
                                <%= node['bind']['zones']['refresh'] %> ; refresh
                                <%= node['bind']['zones']['retry'] %>   ; retry
                                <%= node['bind']['zones']['expire'] %>  ; expire
                                <%= node['bind']['zones']['minimum'] %> ; minimum
                                )
;
@        IN        NS           <%= node['bind']['zones']['nsmaster'] %>.
<% if node['bind']['zones']['nsmaster'].split('.')[1..-1].join('.') == @zone %>
<%= node['bind']['zones']['nsmaster'].split('.')[0] %>     A        <%= node['bind']['zones']['nsmaster_ip'] %>
<% end %>
